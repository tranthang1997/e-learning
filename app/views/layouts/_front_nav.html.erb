<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%= link_to t("header.title"), root_url, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%= form_for :q, url: search_path, method: :get, html: {class: "form-inline my-2 my-lg-0"} do |f| %>
      <%= f.search_field :name_or_description_cont, class: "form-control mr-sm-2", placeholder: " #{t "search_course"}" %>
      <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><%= t"header.Search" %></button>
    <% end %>
    <ul class="navbar-nav ml-auto">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          <span class="mr-2 d-none d-lg-inline text-gray-600 small"><%= current_user.name %></span>
          <%= image_tag current_user.avatar, class: "img-profile rounded-circle w-100" %>
        </a>
        <div class="dropdown-menu dropdown-menu-user" aria-labelledby="navbarDropdown">
          <% if current_user.is_admin? %>
            <%= link_to admin_index_path, class: "dropdown-item" do %>
              <i class="fa fa-external-link fa-sm fa-fw mr-2 text-black-400"></i>
              <%= t "header.Admin_panel" %>
            <% end %>
          <% end %>
          <%= link_to user_path(current_user), class: "dropdown-item" do %>
            <i class="fa fa-user fa-sm fa-fw mr-2 text-black-400"></i>
            <%= t "header.Profile" %>
          <% end %>
          <%= link_to destroy_user_session_path, method: :delete, class: "dropdown-item" do %>
            <i class="fa fa-sign-out fa-sm fa-fw mr-2 text-black-400"></i>
            <%= t("header.Sign_out") %>
          <% end %>
        </div>
      </li>
    </ul>
  </div>
</nav>
