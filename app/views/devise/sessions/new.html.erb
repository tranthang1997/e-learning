<div class="row justify-content-center">

  <div class="col-xl-10 col-lg-12 col-md-9">

    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4"><%= t "user.wellcome_back" %></h1>
              </div>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "user") do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                    class: "form-control form-control-user", id: "exampleInputEmail",
                    placeholder: t("user.email_address")%>
                </div>
                <div class="form-group">
                  <%= f.password_field :password, autocomplete: "current-password",
                    class: "form-control form-control-user", id: "exampleInputPassword",
                    placeholder: t("user.password") %>
                </div>
                <div class="form-group">
                  <% if devise_mapping.rememberable? %>
                    <div class="custom-control custom-checkbox small">
                      <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck" %>
                      <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" do %>
                        <%= t "user.remember" %>
                      <% end %>
                    </div>
                  <% end %>
                </div>
                <%= f.submit "Log in", class: "btn btn-primary btn-user btn-block" %>
              <% end %>
              <hr>
              <%= render "devise/shared/omniauth" %>
              </form>
              <hr>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
