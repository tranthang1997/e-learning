<%- if controller_name != "sessions" %>
  <div class="text-center">
    <%= link_to t("login"), new_session_path(resource_name), class: "small" %><br />
  </div>
<% end %>

<%- if devise_mapping.registerable? && controller_name != "registrations" %>
  <div class="text-center">
    <%= link_to t("signup"), new_registration_path(resource_name), class: "small" %><br />
  </div>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <div class="text-center">
    <%= link_to t("user.forgot_password"), new_password_path(resource_name), class: "small" %><br />
  </div>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != "confirmations" %>
  <div class="text-center">
    <%= link_to t("user.did_not_receive_confirmation"), new_confirmation_path(resource_name), class: "small" %><br />
  </div>
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != "unlocks" %>
  <div class="text-center">
    <%= link_to t("user.did_not_receive_unlock"), new_unlock_path(resource_name), class: "small" %><br />
  </div>
<% end %>
