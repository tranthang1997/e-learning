<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
          <div class="col-lg-7">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4"><%= t "user.create_account" %>!</h1>
              </div>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "user") do |f| %>
                <div class="form-group">
                  <%= f.text_field :name, autofocus: true, class: "form-control form-control-user",
                                   placeholder: t("user.your_name") %>
                </div>
                <div class="form-group">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email",
                                    class: "form-control form-control-user", id: "exampleInputEmail", placeholder: t("user.email_address") %>
                </div>
                <div class="form-group row">
                  <div class="col-sm-6 mb-3 mb-sm-0">
                    <% if @minimum_password_length %>
                      <em>(<%= @minimum_password_length %> <%= t "user.characters_minimum" %>)</em>
                    <% end %><br />
                    <%= f.password_field :password, autocomplete: "new-password",
                                         class: "form-control form-control-user", id: "exampleInputPassword", placeholder: t("user.password")%>
                  </div>
                  <div class="col-sm-6">
                    <i class="text-white">i</i>
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                         class: "form-control form-control-user", id: "exampleRepeatPassword", placeholder: t("user.repeat_password")%>
                  </div>
                </div>
                <%= f.submit t("user.sign_up"), class: "btn btn-primary btn-user btn-block" %>
              <% end %>
              <hr>
              <%= render "devise/shared/omniauth" %>
              <hr>
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
