<%= form_for [:admin, @user], as: :user, class: "user" do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="form-group">
    <%= f.text_field :name, autofocus: true, class: "form-control form-control-user",
      placeholder: t("user.your_name") %>
  </div>
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",
      class: "form-control form-control-user", id: "exampleInputEmail", placeholder: t("user.email_address") %>
  </div>
  <div class="form-group row">
    <div class="col-sm-6 mb-3 mb-sm-0">
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t "user.characters_minimum" %>)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",
        class: "form-control form-control-user", id: "exampleInputPassword", placeholder: t("user.password")%>
    </div>
    <div class="col-sm-6">
      <i class="text-white">i</i>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
        class: "form-control form-control-user", id: "exampleRepeatPassword", placeholder: t("user.repeat_password")%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :avatar %><br>
    <%= f.file_field :avatar, accept: "image/png,image/gif,image/jpeg" %>
  </div>
  <%= button_tag t("submit"), type: "submit", class: "btn btn-primary" %>
  <%= button_tag t("reset"), type: "reset", class: "btn btn-default" %>
<% end %>
